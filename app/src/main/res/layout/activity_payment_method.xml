<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/ic_back_black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/payment_method"
                    android:textAllCaps="false"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/gray2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/select_card"
                android:textAllCaps="false"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <com.vinaygaba.creditcardview.CreditCardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/cardbackground_sky"
                android:layout_margin="@dimen/_10sdp"
                app:cardNumber="5500005555555559"
                app:cardName="Akash Jadhav"
                app:cardNumberTextColor="@color/white"
                app:cardNumberFormat="masked_all_but_last_four"
                app:cardNameTextColor="@color/white"
                app:type="mastercard"
                app:putChip="true"
                app:expiryDate = "02/22"
                app:expiryDateTextColor="@color/white"
                app:isEditable="false"
                app:validTillTextColor="@color/white"
                app:hintTextColor = "@color/white"/>

            <com.vinaygaba.creditcardview.CreditCardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/cardbackground_sky"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                app:cardNumber="5500005555555559"
                app:cardName="Akash Jadhav"
                app:cardNumberTextColor="@color/white"
                app:cardNumberFormat="masked_all_but_last_four"
                app:cardNameTextColor="@color/white"
                app:type="mastercard"
                app:putChip="true"
                app:expiryDate = "02/22"
                app:expiryDateTextColor="@color/white"
                app:isEditable="false"
                app:validTillTextColor="@color/white"
                app:hintTextColor = "@color/white"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivAddCard"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:src="@drawable/add_black"/>

    </RelativeLayout>

</layout>

