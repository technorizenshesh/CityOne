<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_back">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/ic_back_black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/my_cart"
                    android:textAllCaps="false"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/gray2"/>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:layout_marginBottom="@dimen/_60sdp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        android:elevation="@dimen/_10sdp"
                        app:cardBackgroundColor="@color/white"
                        app:contentPadding="@dimen/_3sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:gravity="center_vertical"
                                android:weightSum="10"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.makeramen.roundedimageview.RoundedImageView
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:layout_height="@dimen/_45sdp"
                                    android:padding="@dimen/_10sdp"
                                    app:riv_corner_radius="@dimen/_5sdp"
                                    android:src="@drawable/tickets"
                                    android:layout_marginLeft="@dimen/_10sdp">
                                </com.makeramen.roundedimageview.RoundedImageView>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="6"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_5sdp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_10sdp"
                                        android:text="@string/vip_ticket"
                                        android:singleLine="true"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_10sdp"
                                        android:textStyle="bold"
                                        android:layout_marginLeft="@dimen/_10sdp" />

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="$150 X 2"
                                            android:textColor="@color/red"
                                            android:textSize="@dimen/_10sdp"
                                            android:textStyle="bold" />

                                    </RelativeLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:layout_width="@dimen/_22sdp"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/edit_"/>

                                    <ImageView
                                        android:layout_width="@dimen/_22sdp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:src="@drawable/delete"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        android:elevation="@dimen/_10sdp"
                        app:cardBackgroundColor="@color/white"
                        app:contentPadding="@dimen/_3sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:gravity="center_vertical"
                                android:weightSum="10"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.makeramen.roundedimageview.RoundedImageView
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:layout_height="@dimen/_45sdp"
                                    android:padding="@dimen/_10sdp"
                                    app:riv_corner_radius="@dimen/_5sdp"
                                    android:src="@drawable/tickets"
                                    android:layout_marginLeft="@dimen/_10sdp">
                                </com.makeramen.roundedimageview.RoundedImageView>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="6"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_5sdp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_10sdp"
                                        android:text="@string/normal_ticket"
                                        android:singleLine="true"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_10sdp"
                                        android:textStyle="bold"
                                        android:layout_marginLeft="@dimen/_10sdp" />

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="$100 X 2"
                                            android:textColor="@color/red"
                                            android:textSize="@dimen/_10sdp"
                                            android:textStyle="bold" />

                                    </RelativeLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:layout_width="@dimen/_22sdp"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/edit_"/>

                                    <ImageView
                                        android:layout_width="@dimen/_22sdp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:src="@drawable/delete"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/to_pay"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:layout_weight=".5"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:padding="@dimen/_3sdp"
                    android:layout_marginLeft="@dimen/_10sdp">

                </TextView>

                <TextView
                    android:id="@+id/itemPlusDevCharges"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:text="$500.0"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_weight=".5"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:padding="@dimen/_3sdp">

                </TextView>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btCheckout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/orange_back_10"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:textSize="@dimen/_12sdp"
                android:text="@string/checkout"
                android:fontFamily="@font/poppins_bold" />

        </LinearLayout>

    </RelativeLayout>
</layout>