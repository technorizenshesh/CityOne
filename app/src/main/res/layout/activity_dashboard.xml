                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvStores"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/_10sdp"
