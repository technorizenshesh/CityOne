<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="parcel"
            type="com.cityone.shipping.models.ModelShipRequest.Result" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_5sdp"
            app:contentPadding="@dimen/_5sdp"
            android:elevation="@dimen/_10sdp"
            android:layout_margin="@dimen/_5sdp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius_top_left="@dimen/_5sdp"
                    app:riv_corner_radius_top_right="@dimen/_5sdp"
                    android:src="@drawable/theatre"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="@string/theater_name"
                        android:textStyle="bold"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/black"
                        android:inputType="textVisiblePassword" />

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:gravity="end"
                        android:includeFontPadding="false"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@{parcel.parcel_quantity}"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/red"
                        android:inputType="textVisiblePassword" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="@string/movie"
                        android:textStyle="bold"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/black"
                        android:inputType="textVisiblePassword" />

                    <TextView
                        android:id="@+id/tvMovie"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:gravity="end"
                        android:includeFontPadding="false"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@{parcel.parcel_quantity}"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/red"
                        android:inputType="textVisiblePassword" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="@string/datee"
                        android:textStyle="bold"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/black"
                        android:inputType="textVisiblePassword" />

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:gravity="end"
                        android:includeFontPadding="false"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@{parcel.parcel_quantity}"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/red"
                        android:inputType="textVisiblePassword" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="@string/time_slot"
                        android:textStyle="bold"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/black"
                        android:inputType="textVisiblePassword" />

                    <TextView
                        android:id="@+id/tvTimeSlot"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:gravity="end"
                        android:includeFontPadding="false"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@{parcel.parcel_quantity}"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/red"
                        android:inputType="textVisiblePassword" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="@string/seats_details"
                        android:textStyle="bold"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/black"
                        android:inputType="textVisiblePassword" />

                    <TextView
                        android:id="@+id/tvSeatsDetails"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:gravity="end"
                        android:includeFontPadding="false"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@{parcel.parcel_quantity}"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/red"
                        android:inputType="textVisiblePassword" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>