<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/ic_back_black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/entertainment"
                android:textAllCaps="false"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/green_back_5"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:includeFontPadding="false"
            android:textSize="@dimen/_10sdp"
            android:text="@string/movie_tickets"
            android:fontFamily="@font/poppins_bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:weightSum="3"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btPub"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/orange_back_10"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:textSize="@dimen/_9sdp"
                android:text="@string/pub"
                android:fontFamily="@font/poppins_bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btClub"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_back_10"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:includeFontPadding="false"
                android:textSize="@dimen/_9sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/club"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btEvent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_back_10"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/events"
                android:includeFontPadding="false"
                android:textSize="@dimen/_9sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/home_back">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/ivPubImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                app:riv_border_width="@dimen/_1sdp"
                app:riv_corner_radius="@dimen/_10sdp"
                android:src="@drawable/pubimg"
                android:scaleType="centerCrop"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:elevation="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_100sdp"
                app:contentPadding="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvResName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Royal Oak"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/black"
                            android:inputType="textVisiblePassword" />

                        <TextView
                            android:id="@+id/tvRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5.0"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_bold"
                            android:layout_centerVertical="true"
                            android:drawablePadding="@dimen/_5sdp"
                            android:drawableLeft="@drawable/edit_star"
                            android:layout_alignParentRight="true"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:inputType="textVisiblePassword" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawableLeft="@drawable/ic_blue_location"
                        android:textSize="@dimen/_10sdp"
                        android:drawablePadding="@dimen/_5sdp"
                        android:text="@string/dummy_add"
                        android:textColor="@color/gray" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/home_back">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                app:riv_border_width="@dimen/_1sdp"
                app:riv_corner_radius="@dimen/_10sdp"
                android:src="@drawable/pub2"
                android:scaleType="centerCrop"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:elevation="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_100sdp"
                app:contentPadding="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Blacksmiths Arms"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/black"
                            android:inputType="textVisiblePassword" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5.0"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_bold"
                            android:layout_centerVertical="true"
                            android:drawablePadding="@dimen/_5sdp"
                            android:drawableLeft="@drawable/edit_star"
                            android:layout_alignParentRight="true"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:inputType="textVisiblePassword" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawableLeft="@drawable/ic_blue_location"
                        android:textSize="@dimen/_10sdp"
                        android:drawablePadding="@dimen/_5sdp"
                        android:text="@string/dummy_add"
                        android:textColor="@color/gray" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

</layout>