<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:paddingBottom="@dimen/_20sdp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_100sdp"
                        android:src="@drawable/app_icon"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="@dimen/_100sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/send_request"
                        android:layout_gravity="start"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/_20sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/enter_you_credentials_to_continue"
                        android:layout_gravity="start"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:textColor="@color/gray"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/_10sdp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="start"
                        android:text="@string/username"
                        android:textAllCaps="false"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp">

                        <EditText
                            android:id="@+id/etUsername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/username"
                            android:textSize="@dimen/_10sdp"
                            android:inputType="textVisiblePassword"
                            android:fontFamily="@font/poppins_regular"
                            android:singleLine="true"
                            android:drawablePadding="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:padding="@dimen/_10sdp"
                            android:background="@null"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="start"
                        android:text="@string/email"
                        android:textAllCaps="false"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:contentPadding="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp">

                        <EditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/email"
                            android:textSize="@dimen/_10sdp"
                            android:inputType="textVisiblePassword"
                            android:fontFamily="@font/poppins_regular"
                            android:singleLine="true"
                            android:drawablePadding="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:padding="@dimen/_10sdp"
                            android:background="@null"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="start"
                        android:text="@string/phone"
                        android:textAllCaps="false"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:contentPadding="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.hbb20.CountryCodePicker
                                android:id="@+id/ccp"
                                android:layout_width="0dp"
                                android:layout_weight="0.4"
                                android:gravity="center"
                                app:ccp_textSize="@dimen/_12sdp"
                                app:ccp_defaultPhoneCode="91"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_height="match_parent"/>

                            <EditText
                                android:id="@+id/etPhone"
                                android:layout_width="0dp"
                                android:layout_weight="0.6"
                                android:layout_height="wrap_content"
                                android:hint="@string/mobile_number"
                                android:textSize="@dimen/_12sdp"
                                android:inputType="number"
                                android:fontFamily="@font/poppins_regular"
                                android:singleLine="true"
                                android:maxLength="12"
                                android:drawablePadding="@dimen/_10sdp"
                                android:textColor="@color/black"
                                android:padding="@dimen/_10sdp"
                                android:background="@null"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="start"
                        android:visibility="gone"
                        android:text="@string/select_user_type"
                        android:textAllCaps="false"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:contentPadding="@dimen/_10sdp"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp">

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_8sdp"
                            android:entries="@array/user_type"
                            android:id="@+id/spUserType"/>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/llDocuments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/upload_any_2_documents_ex_pan_driving_license"
                            android:layout_gravity="start"
                            android:includeFontPadding="false"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_centerHorizontal="true"
                            android:textSize="@dimen/_12sdp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivDoc1"
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:scaleType="fitXY"
                                android:background="@color/gray"
                                android:layout_height="@dimen/_70sdp"/>

                            <ImageView
                                android:id="@+id/ivDoc2"
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:scaleType="fitXY"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:background="@color/gray"
                                android:layout_height="@dimen/_70sdp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="start"
                        android:text="@string/add_address"
                        android:textAllCaps="false"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:contentPadding="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp">

                        <EditText
                            android:id="@+id/address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/select_address"
                            android:textSize="@dimen/_10sdp"
                            android:focusableInTouchMode="false"
                            android:focusable="false"
                            android:cursorVisible="false"
                            android:inputType="textVisiblePassword|textMultiLine"
                            android:fontFamily="@font/poppins_regular"
                            android:drawablePadding="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:padding="@dimen/_10sdp"
                            android:background="@null"/>

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="start"
                        android:text="@string/password"
                        android:textAllCaps="false"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:contentPadding="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp">

                        <EditText
                            android:id="@+id/pass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/password"
                            android:textSize="@dimen/_10sdp"
                            android:inputType="textPassword"
                            android:fontFamily="@font/poppins_regular"
                            android:singleLine="true"
                            android:drawablePadding="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:padding="@dimen/_10sdp"
                            android:background="@null"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="start"
                        android:text="@string/confirm_pass"
                        android:textAllCaps="false"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:contentPadding="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp">

                        <EditText
                            android:id="@+id/confirmPass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/confirm_pass"
                            android:textSize="@dimen/_10sdp"
                            android:inputType="textPassword"
                            android:fontFamily="@font/poppins_regular"
                            android:singleLine="true"
                            android:drawablePadding="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:padding="@dimen/_10sdp"
                            android:background="@null"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/orange_back_10"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginLeft="@dimen/_40sdp"
                        android:layout_marginRight="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:text="@string/submit" />

                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

</layout>